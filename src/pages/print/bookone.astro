import { getCollection, render } from 'astro:content';

// 1. Load all book entries
const entries = await getCollection('bookOne', ({ data }) => !data.draft);

// 2. Group by chapter folder
const chapters = new Map();

for (const entry of entries) {
  if (entry.id.endsWith('/index.mdx')) { continue; }

  const [chapterKey] = entry.id.split('/'); // chapter-1

  if (!chapters.has(chapterKey)) {
    chapters.set(chapterKey, {
      key: chapterKey,
      title: entry.data.seriesTitle,
      entries: [],
    });
  }

  chapters.get(chapterKey).entries.push(entry);

  if (entry.id.endsWith('/index.mdx')) {
    chapters.get(chapterKey).intro = entry;
    continue;
  }
}

// 3. Sort chapters + subchapters
const book = Array.from(chapters.values())
  .sort((a, b) =>
    a.key.localeCompare(b.key, undefined, { numeric: true })
  )
  .map(chapter => ({
    ...chapter,
    entries: chapter.entries
      .slice()
      .sort((a:any, b:any) => Number(a.data.order) - Number(b.data.order)),
  }));

for (const chapter of book) {
  console.table(
    chapter.entries.map((e:any) => ({
      id: e.id,
      order: e.data.order,
      title: e.data.title,
    }))
  );
}

