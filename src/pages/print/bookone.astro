<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Book One</title>

    <style>
      /* ===============================
         PAGE GEOMETRY
         =============================== */

      @page {
        size: B5;
        margin: 23mm;

        @bottom-center {
          content: counter(page);
          font-size: 9pt;
          color: #555;
        }
      }

      /* ===============================
        FRONT MATTER (Roman numerals)
        =============================== */

      .frontmatter {
        page: front;
      }

      @page front {
        @bottom-center {
          content: counter(page, lower-roman);
        }
      }

      /* ===============================
        MAIN MATTER
        =============================== */

      @page body:first {
        counter-reset: page 1;
      }

      .mainmatter {
        page: body;
        counter-reset: page 1 chapter;
      }

      @page body {
        @bottom-center {
          content: counter(page);
        }

        @top-center {
          content: string(chapter);
          font-size: 10pt;
          font-style: italic;
          color: #666;
        }
      }

      /* ===============================
        TYPOGRAPHY
        =============================== */

      body {
        font-family: serif;
        font-size: 11pt;
        line-height: 1.6;
        hyphens: auto;
      }

      p {
        orphans: 3;
        widows: 3;
      }

      /* ===============================
        CHAPTER STRUCTURE
        =============================== */

      .chapter {
        page-break-before: always;
        counter-increment: chapter;
        counter-reset: section subsection;
      }

      .chapter > h1 {
        font-size: 20pt;
        margin: 0 0 10mm 0;
        string-set: chapter content();
      }

      /* ===============================
        FLOW CONTROL
        =============================== */

      h1, h2, h3 {
        page-break-after: avoid;
      }

      pre, blockquote, figure {
        page-break-inside: avoid;
      }

      /* ===============================
        CODE BLOCKS
        =============================== */

      pre {
        white-space: pre-wrap;
        word-break: break-word;
        font-size: 9pt;
        line-height: 1.45;
        margin: 6mm 0;
      }

      code {
        font-family: "JetBrains Mono", "Fira Code", monospace;
      }

      /* ===============================
        BLOCKQUOTES
        =============================== */

      blockquote {
        margin: 6mm 0;
        padding-left: 6mm;
        border-left: 2mm solid #999;
        font-style: italic;
      }

      /* ===============================
        TABLE OF CONTENTS
        =============================== */

      .toc {
        page-break-after: always;
      }

      .toc h1 {
        text-align: center;
        margin-bottom: 12mm;
      }

      .toc a {
        text-decoration: none;
        color: inherit;
      }
    </style>
  </head>

  <body>
    <!-- Title Page -->
    <section class="frontmatter toc">
      <h1>Mastering R: From Data to Clarity</h1>
      <hr />

      <h1>Table of Contents</h1>

      {Array.from(chapters.values()).map((chapter, i) => (
        <div class="toc-chapter">
          <h2>{i + 1}. {chapter.title}</h2>

          <ul style="list-style: none; padding-left: 1.25rem;">
            {chapter.entries.map((entry:any, j:any) => (
              <li>
                <a class="" href={`#${entry.slug}`}>
                  {i + 1}.{j + 1} {entry.data.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}

      <p><em>Published by Notivra</em></p>
      <hr />
    </section>

    <!-- Book -->
    <main class="mainmatter">
      {book.map(async (chapter, ci) => (
        <section class="chapter">
          <h1 id={`chapter-${ci + 1}`}>
            {ci + 1}. {chapter.title}
          </h1>

          {await Promise.all(
            chapter.entries.map(async (entry:any, si:any) => {
          const { Content } = await render(entry);

          return (
          <article>
            <h2 id={entry.slug}> 
              {ci + 1}.{si + 1} {entry.data.title} 
            </h2>
            <Content />
          </article>
          );
          })
          )}
        </section>
      ))}
    </main>
  </body>
</html>
