<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Book One</title>

    <style>
      @page {
        size: A4;
        margin: 24mm;
      }

      body {
        font-family: serif;
        font-size: 11pt;
        line-height: 1.6;
        hyphens: auto;
        counter-reset: chapter;
      }

      .chapter {
        page-break-before: always;
        counter-increment: chapter;
        counter-reset: section subsection;
      }

      .chapter > h1::before {
        content: counter(chapter) ". ";
      }

      article {
        counter-reset: subsection;
      }

      article > h2 {
        counter-increment: section;
      }

      article > h3 {
        counter-increment: subsection;
      }

      h1 {
        font-size: 20pt;
        margin: 0 0 10mm 0;
      }

      h2 {
        font-size: 14pt;
        margin: 8mm 0 4mm;
      }

      h3 {
        font-size: 12pt;
        margin: 6mm 0 3mm;
      }

      h1, h2, h3 {
        page-break-after: avoid;
      }

      pre, blockquote, figure {
        page-break-inside: avoid;
      }

      p {
        orphans: 3;
        widows: 3;
      }

      /* Each article = new section */
      .chapter article {
        counter-reset: section subsection;
      }

      .subchapter {
          break-inside: avoid;
      }
 
      article h1,
      article h2,
      article h3 {
        scroll-margin-top: 3rem;
      }

      .toc {
        page-break-after: always;
      }

      .toc h1 {
        text-align: center;
        margin-bottom: 2rem;
      }

      .toc-chapter {
        margin-bottom: 1.5rem;
      }

      .toc-chapter h2 {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
      }

      .toc ul {
        margin-left: 1.5rem;
      }

      .toc li {
        margin: 0.25rem 0;
      }

      pre {
        white-space: pre-wrap;
        word-break: break-word;
        font-size: 9pt;
        line-height: 1.45;
      }

      pre code {
        background: none;
        padding: 0;
        color: #1f2937;
        font-family: "JetBrains Mono", "Fira Code", monospace;
      }

      :not(pre) > code {
        background: #eef2ff;
        color: #3730a3;
        padding: 0.15em 0.35em;
        border-radius: 4px;
        font-size: 0.9em;
        font-family: "JetBrains Mono", monospace;
      }

      blockquote {
        margin: 1.75rem 0;
        padding: 1rem 1.25rem;
        background: #fafafa;
        border-left: 4px solid #9ca3af;
        color: #374151;
        font-style: italic;
        page-break-inside: avoid;
      }

      blockquote p {
        margin: 0.5rem 0;
      }

      blockquote strong {
        font-style: normal;
        color: #111827;
      }

      p, blockquote, pre {
        orphans: 3;
        widows: 3;
      }
   </style>
  </head>

  <body>
    <!-- Title Page -->
    <section>
      <h1>Mastering R: From Data to Clarity</h1>
      <p><em>Published by Notivra</em></p>
    </section>

    <hr />

    <section class="toc">
      <h1>Table of Contents</h1>

      {Array.from(chapters.values()).map((chapter, i) => (
        <div class="toc-chapter">
          <h2>{i + 1}. {chapter.title}</h2>

          <ul style="list-style: none; padding-left: 1.25rem;">
            {chapter.entries.map((entry:any, j:any) => (
              <li>
                <a class="" href={`#${entry.slug}`}>
                  {i + 1}.{j + 1} {entry.data.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}

      <hr />
    </section>

    <!-- Book -->
    {book.map(async (chapter, ci) => (
      <section class="chapter">
        <h1 id={`chapter-${ci + 1}`}>
          {ci + 1}. {chapter.title}
        </h1>

        {await Promise.all(
          chapter.entries.map(async (entry:any, si:any) => {
            const { Content } = await render(entry);

            return (
              <article>
                <h2 id={entry.slug}> 
                  {ci + 1}.{si + 1} {entry.data.title} 
                </h2>
                <Content />
              </article>
            );
          })
        )}
      </section>
    ))}
  </body>
</html>
