---
import { SITE_TITLE } from "../consts";

const today = new Date();
---

<footer class="relative overflow-hidden">
  <!-- subtle glowing background -->
  <div class="absolute inset-0 bg-gradient-to-b from-slate-500 via-slate-100 to-transparent opacity-90"></div>

  <!-- call-to-action -->
  <div class="relative z-10 py-10 flex flex-col items-center space-y-4">
    <a
      href="https://notivra.com/services"
      class="inline-block text-[16px] bg-gradient-to-r from-indigo-600 to-purple-600 !text-white font-bold py-2 px-4 rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 no-underline"
    >
      ‚ú® Discover how we can empower your research

    </a>
    <!-- social links -->
    <div class="social-links">
      <a href="https://x.com/notivra" aria-label="X">üê¶</a>
      <a href="https://github.com/panda-67/notivra_blog" aria-label="GitHub" class="social-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="text-gray-700" width="24" height="24">
          <path d="M12 .5C5.65.5.5 5.65.5 12a11.5 11.5 0 007.86 10.94c.57.1.78-.25.78-.55v-2.1c-3.2.7-3.88-1.55-3.88-1.55-.52-1.3-1.27-1.65-1.27-1.65-1.04-.7.08-.68.08-.68 1.14.08 1.74 1.17 1.74 1.17 1.02 1.74 2.68 1.23 3.33.94.1-.74.4-1.23.72-1.52-2.55-.3-5.23-1.27-5.23-5.64 0-1.25.45-2.27 1.17-3.07-.12-.3-.5-1.5.12-3.12 0 0 .96-.3 3.15 1.17a10.86 10.86 0 015.74 0c2.2-1.47 3.15-1.17 3.15-1.17.62 1.62.24 2.82.12 3.12.72.8 1.17 1.82 1.17 3.07 0 4.4-2.68 5.33-5.23 5.63.42.36.78 1.06.78 2.14v3.18c0 .3.21.65.78.55A11.5 11.5 0 0023.5 12C23.5 5.65 18.35.5 12 .5z"/>
        </svg>
      </a>
      <a href="mailto:info@notivra.com" aria-label="Email">üìß</a>
    </div>

    <!-- copyright -->
    <p class="text-[16px] text-gray-700 mt-4">
      &copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.
    </p>
  </div>
</footer>

<style>
  footer {
    position: relative;
    padding: 3em 1em 1em 1em;
    color: rgb(var(--gray));
    text-align: center;
  }

  .social-links {
    display: flex;
    justify-content: center;
    align-items: safe center;
    gap: 1.5em;
    font-size: 1.4rem;
  }

  .social-links a {
    text-decoration: none;
    transition: color 0.3s, transform 0.3s;
    color: rgba(255, 255, 255, 0.7);
  }

  .social-links a:hover {
    color: white;
    transform: scale(1.2);
  }
</style>

