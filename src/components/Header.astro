---
import BlogSearch from '../components/BlogSearch.jsx';
import HeaderLink from './HeaderLink.astro';
import logoSrc from '../assets/logo.png';
---

<header class="sticky top-0 z-50 bg-[#F2F2F0] shadow-xl">
  <nav class="mx-auto max-w-7xl px-4">
    <div class="flex h-16 items-center justify-between">

      <!-- Left: Brand -->
      <a href="https://notivra.com" class="flex items-center">
        <img src={logoSrc.src} alt="Notivra Logo" class="-translate-y-1.5" loading="eager" decoding="async" style={{height: "32px"}} />
      </a>

      <!-- Center: Navigation -->
      <div class="flex items-center gap-4">

        <!-- Welcome always visible -->
        <HeaderLink
          href="https://notivra.com/home"
          class="font-semibold md:font-medium"
        >
          Welcome
        </HeaderLink>

        <!-- Desktop-only links -->
        <div class="hidden md:flex items-center gap-4">
          <HeaderLink href="/">Insights</HeaderLink>
          <HeaderLink href="/about">About</HeaderLink>
        </div>
      </div>

      <!-- Right: Actions -->
      <div class="flex items-center gap-3">

        <!-- Search (self-contained modal) -->
        <BlogSearch client:load />

        <!-- Desktop-only social -->
        	<div class="hidden md:flex gap-3 items-center">
            <a href="https://www.tiktok.com/@notivra" class="social-icon inline-block hover:scale-110 transition-transform" target="_blank" rel="noopener noreferrer">
              <span class="sr-only">Go to Tiktok</span>
              <svg viewBox="0 0 220 230" aria-hidden="true" width="28" height="28" >
                <path
                  fill="#25F4EE"
                  d="M114 113v33.5a24.3 24.3 0 1 1-17.06-23.1v-20.2a55.8 55.8 0 1 0 47.58 55.27V70.52a60.48 60.48 0 0 0 35.08 11.2v-17A60.26 60.26 0 0 1 149.08 12H118.56v101z"
                />
                <path
                  fill="currentColor"
                  d="M200.52 81.72a60.48 60.48 0 0 1-35.08-11.2v66.18a55.8 55.8 0 1 1-47.58-55.27v31.69a24.3 24.3 0 1 0 17.06 23.1V20h30.52a60.26 60.26 0 0 0 35.08 52.35z"
                />
              </svg>
            </a>
            <a href="https://github.com/panda-67/notivra_blog" target="_blank" rel="noopener noreferrer" class="social-icon inline-block hover:scale-110 transition-transform">
              <span class="sr-only">Go to GitHub repo</span>
              <svg viewBox="0 0 16 16" aria-hidden="true" width="26" height="26"
              ><path
                fill="currentColor"
                d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
              ></path></svg
              >
            </a>
          </div>
       </div>
    </div>
  </nav>
</header>
