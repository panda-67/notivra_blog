---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION } from '../consts';
import type { CollectionEntry } from 'astro:content';
import '../styles/main-page.css';

type BlogEntry = CollectionEntry<'blog'>;

interface Props {
  posts: BlogEntry[];
  currentPage: number;
  totalPages: number;
}

const { posts, currentPage, totalPages } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section>
        <ul>
          {
           posts.map((post) => (
              <li>
                <a href={`/${post.id}/`}>
                  {post.data.heroImage && (
                    <Image width={720} height={360} src={post.data.heroImage} alt="" />
                  )}
                  <h4 class="title font-sans">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
      <nav class="flex items-center justify-center gap-4 mt-8">
        {currentPage > 1 && (
          <a
            href={currentPage === 2 ? '/' : `/page/${currentPage - 1}`}
            class="px-4 py-2 rounded bg-gray-100 text-gray-700 hover:bg-gray-200 transition"
          >
            ← Previous
          </a>
        )}

        <span class="text-sm text-gray-500">
          Page {currentPage} of {totalPages}
        </span>

        {currentPage < totalPages && (
          <a
            href={`/page/${currentPage + 1}`}
            class="px-4 py-2 rounded bg-gray-100 text-gray-700 hover:bg-gray-200 transition"
          >
            Next →
          </a>
        )}
      </nav>
    </main>
	  <Footer />
	</body>
</html>
