---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION } from '../consts';
import type { CollectionEntry } from 'astro:content';
import '../styles/main-page.css';

type BlogEntry = CollectionEntry<'blog'>;

interface Props {
  posts: BlogEntry[];
  currentPage: number;
  totalPages: number;
  tag?: string;
}

const { posts, currentPage, totalPages, tag} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
    <BaseHead title='Insights', description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
      {tag ? (
        <div class="mb-8 text-center">
          <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100">
            Posts tagged with <span class="text-indigo-600 dark:text-indigo-400">#{tag}</span>
          </h1>
        </div>
      ) : (
        <div class="mb-10 text-center">
          <h1 class="!mb-2 text-4xl font-extrabold tracking-tight text-gray-900 dark:text-gray-100">
            Insights
          </h1>
          <p class="text-gray-500 max-w-2xl mx-auto">
            Research notes, technical essays, and long-form thinking.
          </p>
        </div>
      )}

      <section aria-label="Blog Posts">
        <div>
          <ul class="space-y-6">
            {posts.map((post) => (
              <li class={`group post ${post === posts[0] && !tag ? 'post-featured' : ''}`}>
                <a href={`/${post.id}/`} aria-label={`Read: ${post.data.title}`} class="block focus:outline-none focus:ring-2 focus:ring-indigo-500">
                  {post.data.heroImage && (
                    <Image
                      width={720}
                      height={360}
                      src={post.data.heroImage}
                      alt={post.data.title}
                      class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
                      loading="lazy"
                    />
                  )}

                  <div class="p-5">
                    <div class="text-xs uppercase tracking-wide text-gray-400 mb-1">
                      <FormattedDate date={post.data.pubDate} />
                      {post.data.series && 
                        <span class="hidden sm:inline mx-1">·</span> 
                        <span> {post.data.seriesTitle ?? post.data.series}</span>
                      }
                    </div>

                    <div class="w-full text-sm text-gray-500">
                      <span class="text-lg font-semibold text-gray-900 leading-loose transition-colors duration-200 group-hover:text-indigo-700">
                        {post.data.title}
                      </span> <br/>
                      Author: <span class="font-medium text-gray-800">{post.data.author || 'Notivra Team'}</span>
                    </div>

                    <hr class="my-3 border-gray-100 dark:border-gray-800" />

                    <div class="mt-3 tags flex flex-wrap gap-2">
                      {post.data.tags?.map((tag) => (
                        <span class="px-2 py-0.5 text-xs font-medium bg-indigo-50 text-indigo-700 rounded hover:bg-indigo-100" >
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>
                </a>
              </li>
            ))}
          </ul>
        </div>
      </section>
      <!-- <nav class="flex text-[16px] items-center justify-center gap-4 mt-8"> -->
      <nav class="mt-12 pt-6 text-[16px] border-t border-indigo-600/90 flex items-center justify-center gap-6">
        {currentPage > 1 && (
          <a href={
            currentPage === 2
              ? tag
                ? `/tags/${tag}/page/1`
                : `/`
              : tag
                ? `/tags/${tag}/page/${currentPage - 1}`
                : `/page/${currentPage - 1}`
          }
            class="px-3 py-2 rounded bg-gray-100 text-gray-700 hover:bg-gray-200 transition"
          >
            ← Previous
          </a>
        )}

        <span class="text-sm text-gray-500">
          Page {currentPage} of {totalPages}
        </span>

        {currentPage < totalPages && (
          <a
          href={
              tag
                ? `/tags/${tag}/page/${currentPage + 1}`
                : `/page/${currentPage + 1}`
            }
            class="px-3 py-2 rounded bg-gray-100 text-gray-700 hover:bg-gray-200 transition"
          >
            Next →
          </a>
        )}
      </nav>
    </main>
	  <Footer />
	</body>
</html>
