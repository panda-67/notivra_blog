---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION } from '../consts';
import type { CollectionEntry } from 'astro:content';
import '../styles/main-page.css';

type BlogEntry = CollectionEntry<'blog'>;

interface Props {
  posts: BlogEntry[];
  currentPage: number;
  totalPages: number;
  tag?: string;
}

const { posts, currentPage, totalPages, tag} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
      {tag && (
        <div class="mb-8 text-center">
          <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100">
            Posts tagged with <span class="text-blue-600 dark:text-blue-400">#{tag}</span>
          </h1>
        </div>
      )}

      <section aria-label="Blog Posts">
        <ul class="space-y-8">
          {posts.map((post) => (
            <li
              class="group rounded-lg border border-gray-200 overflow-hidden transition-all duration-300 hover:shadow-md hover:-translate-y-0.5"
            >
              <a href={`/${post.id}/`} aria-label={`Read: ${post.data.title}`} class="block focus:outline-none focus:ring-2 focus:ring-indigo-500">
                {post.data.heroImage && (
                  <Image
                    width={720}
                    height={360}
                    src={post.data.heroImage}
                    alt={post.data.title}
                    class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  />
                )}

                <div class="p-5">
                  <h4 class="title text-lg font-semibold text-gray-900 leading-loose transition-colors duration-200 group-hover:text-indigo-700">
                    {post.data.title}
                  </h4>

                  <div class="flex flex-wrap date w-full items-center gap-x-2 text-sm text-gray-500">
                    <span>
                      by <span class="font-medium text-gray-800">{post.data.author || 'Notivra Team'}</span>
                    </span>
                    <span class="hidden sm:inline">·</span>
                    <span><FormattedDate date={post.data.pubDate} /></span>
                  </div>

                  <div class="mt-3 tags flex flex-wrap gap-2">
                    {post.data.tags?.map((tag) => (
                      <span
                        class="px-2.5 py-0.5 text-xs font-semibold bg-slate-100 text-slate-700 rounded-full hover:bg-slate-200 transition-colors"
                      >
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              </a>
            </li>
          ))}
        </ul>
      </section>
      <nav class="flex text-[16px] items-center justify-center gap-4 mt-8">
        {currentPage > 1 && (
          <a href={
            currentPage === 2
              ? tag
                ? `/tags/${tag}/page/1`
                : `/`
              : tag
                ? `/tags/${tag}/page/${currentPage - 1}`
                : `/page/${currentPage - 1}`
          }
            class="px-3 py-2 rounded bg-gray-100 text-gray-700 hover:bg-gray-200 transition"
          >
            ← Previous
          </a>
        )}

        <span class="text-sm text-gray-500">
          Page {currentPage} of {totalPages}
        </span>

        {currentPage < totalPages && (
          <a
          href={
              tag
                ? `/tags/${tag}/page/${currentPage + 1}`
                : `/page/${currentPage + 1}`
            }
            class="px-3 py-2 rounded bg-gray-100 text-gray-700 hover:bg-gray-200 transition"
          >
            Next →
          </a>
        )}
      </nav>
    </main>
	  <Footer />
	</body>
</html>
